<div class="grid_10">

  <h2><%=h @user %></h2>

  <ul class="playlist">
    <% @user.posts.each do |post| %>
      <li><%= render post %></li>
    <% end if @user.posts %>
  </ul>
  
</div>

<div class="grid_2">

  <h2>Following</h2>

  <ul>
    <% @user.followings.each do |user| %>
      <li><%= render user %></li>
    <% end if @user.followings %>
  </ul>

  <h2>Followers</h2>

  <ul>
    <% @user.followers.each do |user| %>
      <li><%= render user %></li>
    <% end if @user.followers %>
  </ul>
  
</div>